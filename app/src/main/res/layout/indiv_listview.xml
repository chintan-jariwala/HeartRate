<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:layout_gravity="right"
        android:layout_weight="0.03">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Date"
            android:padding="10dp"
            android:id="@+id/dateView"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="BPM"
            android:id="@+id/bpmView"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/dateView"
            android:layout_toEndOf="@+id/dateView"
            android:layout_marginLeft="39dp"
            android:layout_marginStart="39dp" />

        <RelativeLayout
            android:layout_width="125dp"
            android:layout_height="match_parent"
            android:layout_alignTop="@+id/dateView"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:id="@+id/moodView"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:id="@+id/exerciseView"
                android:padding="10dp"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/moodView"
                android:layout_toEndOf="@+id/moodView" />
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>